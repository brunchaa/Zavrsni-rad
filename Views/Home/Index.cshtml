@{
Layout = "~/Views/Shared/_Layout.cshtml";
ViewData["Title"] = "Početna stranica";
}

@if (!User.Identity.IsAuthenticated)
{
    <div class="container my-5 text-center">
        <div class="card shadow-lg border-0 rounded-3" style="background-color: #f8f9fa;">
            <img src="~/images/istockphoto-1720037556-612x612.jpg" class="card-img-top rounded-top" alt="Ilustracija skladišta" style="height: 300px; object-fit: contain;">
            <div class="card-header bg-dark text-white rounded-top p-4" style="background-color: #003366 !important;">
                <h2 class="mb-0">Dobrodošli u Skladište Robe</h2>
            </div>
            <div class="card-body p-4">
                <p class="lead">Molimo prijavite se ili registrirajte da nastavite.</p>
                <a asp-controller="Account" asp-action="Login" class="btn btn-warning me-3" style="background-color: #ff6600; border-color: #ff6600;"><i class="fas fa-sign-in-alt"></i> Prijava</a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-secondary"><i class="fas fa-user-plus"></i> Registracija</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="container my-5">
        <div class="card shadow-lg border-0 rounded-3" style="background-color: #f8f9fa;">
            <div class="card-header bg-dark text-white rounded-top p-4" style="background-color: #003366 !important;">
                <h2 class="mb-0">Dobrodošli, @User.Identity.Name</h2>
            </div>
            <div class="card-body p-4">
                <h3>Vijesti iz firme</h3>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <img src="~/images/6299053.png" class="card-img-top" alt="Liječnički pregled" style="height: 200px; object-fit: contain;">
                            <div class="card-body">
                                <h5 class="card-title">Ovaj tjedan obavezni liječnički pregledi</h5>
                                <p class="card-text">Svi zaposlenici moraju obaviti godišnji pregled. Prijavite se kod HR-a do petka.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <img src="~/images/3.jpg" class="card-img-top" alt="Obuka za barkod skenere" style="height: 200px; object-fit: contain;">
                            <div class="card-body">
                                <h5 class="card-title">Obuka za barkod skenere sljedeći tjedan</h5>
                                <p class="card-text">Prijavite se za obuku kako biste poboljšali efikasnost u skladištu.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <img src="~/images/4.jfif" class="card-img-top" alt="Godišnji inventar" style="height: 200px; object-fit: contain;">
                            <div class="card-body">
                                <h5 class="card-title">Godišnji inventar – pripremite se!</h5>
                                <p class="card-text">Pripreme za godišnji pregled inventara počinju uskoro. Više detalja na sastanku.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}