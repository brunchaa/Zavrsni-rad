@model SkladisteRobe.Models.Transakcija
@{
    ViewData["Title"] = "Unos ulaza/izlaza";
}
<div class="container mt-5">
    <h2 class="mb-4">Unos ulaza/izlaza</h2>
    <form asp-action="DodajUlazIzlaz" method="post" class="card p-4 shadow">
        <input type="hidden" asp-for="MaterijalId" value="@ViewBag.MaterijalId" />
        <div class="form-group mb-3">
            <label asp-for="Tip" class="form-label"></label>
            <select asp-for="Tip" class="form-select">
                <option value="Ulaz">Ulaz</option>
                <option value="Izlaz">Izlaz</option>
            </select>
            <span asp-validation-for="Tip" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Kolicina" class="form-label"></label>
            <input asp-for="Kolicina" class="form-control" />
            <span asp-validation-for="Kolicina" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100">Spremi</button>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}